<resources>
    <style name="AppTheme" parent="android:Theme.DeviceDefault.Light.DarkActionBar">
        <item name="android:listChoiceBackgroundIndicator">@drawable/spinner_popup_item_background</item>
    </style>

    <style name="Dialog" parent="android:Theme.DeviceDefault.Light.NoActionBar">
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ListItem" parent="android:Widget.TextView">
        <item name="android:minHeight">32dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingMultiplier">1.0</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

    <style name="ControlsButton" parent="ListItem">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="ContentBlockStyle">
        <item name="android:padding">16dp</item>
        <item name="android:showDividers">middle</item>
        <item name="android:divider">@drawable/content_divider</item>
        <item name="android:background">@drawable/content_block_background</item>
    </style>

    <style name="SpinnerTitle" parent="android:Widget.Material.Light.TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

</resources>
